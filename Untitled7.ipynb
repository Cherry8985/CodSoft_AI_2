   "source": [
    "import math\n",
    "\n",
    "board = [' ' for _ in range(9)] # we will use a single list to represent the board\n",
    "\n",
    "# Function to print Tic Tac Toe\n",
    "def print_board(board):\n",
    "    print(f' {board[0]} | {board[1]} | {board[2]} ')\n",
    "    print('---|---|---')\n",
    "    print(f' {board[3]} | {board[4]} | {board[5]} ')\n",
    "    print('---|---|---')\n",
    "    print(f' {board[6]} | {board[7]} | {board[8]} ')\n",
    "\n",
    "def valid_move(x):\n",
    "    return board[x] == ' '\n",
    "\n",
    "def check_win(player, board):\n",
    "    win_cond = [[0, 1, 2],[3, 4, 5],[6, 7, 8],[0, 3, 6],[1, 4, 7],[2, 5, 8],[0, 4, 8],[2, 4, 6] ]\n",
    "    for condition in win_cond:\n",
    "        if board[condition[0]] == board[condition[1]] == board[condition[2]] == player:\n",
    "            return True\n",
    "    return False      \n",
    "\n",
    "def check_draw(board):\n",
    "    return ' ' not in board\n",
    "\n",
    "def board_copy(board):\n",
    "    new_board = [item for item in board]\n",
    "    return new_board\n",
    "\n",
    "def test_win_move(board, player, move):\n",
    "    bcopy = board_copy(board)\n",
    "    bcopy[move] = player\n",
    "    return check_win(player, bcopy)\n",
    "\n",
    "def test_fork_move(board, player, move):\n",
    "    bcopy = board_copy(board)\n",
    "    bcopy[move] = player\n",
    "    winning_moves = 0\n",
    "    for move in range(9):\n",
    "        if bcopy[move] == ' ' and test_win_move(bcopy, player, move):\n",
    "            winning_moves += 1\n",
    "    return winning_moves >= 2\n",
    "\n",
    "def get_agent_move(board):\n",
    "    # Return winning move if available\n",
    "    for move in range(9):\n",
    "        if board[move] == ' ' and test_win_move(board, 'X', move):\n",
    "            return move\n",
    "    # Return blocking move if opponent is winning on next move\n",
    "    for move in range(9):\n",
    "        if board[move] == ' ' and test_win_move(board, 'O', move):\n",
    "            return move\n",
    "    # Return fork move if available\n",
    "    for move in range(9):\n",
    "        if board[move] == ' ' and test_fork_move(board, 'X', move):\n",
    "            return move\n",
    "    # Return blocking fork move if opponent has fork opportunity\n",
    "    for move in range(9):\n",
    "        if board[move] == ' ' and test_fork_move(board, 'O', move):\n",
    "            return move\n",
    "    # Return center move if available\n",
    "    if board[4] == ' ':\n",
    "        return 4\n",
    "    # Return corner move if available\n",
    "    for move in [0, 2, 6, 8]:\n",
    "        if board[move] == ' ':\n",
    "            return move\n",
    "    # Return side move if available\n",
    "    for move in [1, 3, 5, 7]:\n",
    "        if board[move] == ' ':\n",
    "            return move\n",
    "\n",
    "def tictactoe(board):\n",
    "    print_board(board)\n",
    "    while True:\n",
    "        if len([i for i in board if i == ' ']) == 0:\n",
    "            break\n",
    "        if not check_win('O', board):\n",
    "            print(\"Player X turn\")\n",
    "            p_move = int(input(\"Enter move: \"))\n",
    "            if valid_move(p_move):\n",
    "                board[p_move] = 'X'\n",
    "                print_board(board)\n",
    "            else:\n",
    "                print(\"Invalid move! Try again.\")\n",
    "                continue\n",
    "        else:\n",
    "            break\n",
    "        if not check_win('X', board):\n",
    "            print(\"Player O turn\")\n",
    "            move = get_agent_move(board)\n",
    "            board[move] = 'O'\n",
    "            print_board(board)\n",
    "        else:\n",
    "            break\n",
    "    if check_win('X', board):\n",
    "        print(\"X Wins!\")\n",
    "    elif check_win('O', board):\n",
    "        print(\"O Wins!\")\n",
    "    else:\n",
    "        print(\"Draw!\")\n",
    "\n",
    "tictactoe(board)\n"
   ]
